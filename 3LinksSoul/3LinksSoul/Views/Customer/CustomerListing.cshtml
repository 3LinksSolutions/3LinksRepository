@model List<_3LinksSoul.Models.GetCustomer>

@{
    ViewBag.Title = "CustomerList";
}
<h2>CustomerList</h2>
@using (Html.BeginForm("CustomerListing","Customer",FormMethod.Get))
{
    <div class="row">
        <div class="col-sm-12">
            <span class="pull-left">
                @*<input type="text" id="searchText" name="searchText" class="form-control" />*@
                @Html.TextBox("searchText", "", new { @class="form-control", @name="searchText", @placeholder="Search name"})
                <input type="submit" value="Search" class="btn btn-primary" />
            </span>
            <span class="pull-right">
                @Html.ActionLink("Export", "ExportExcel", "Customer", new { @class = "btn btn-default" })
            </span>
        </div>
    </div>
}

<table class="table table-condensed">
    <thead>
        <tr>
            @*<th>Customer Id</th>*@
            <th>Comapny Name</th>
            <th>Contact Name</th>
            <th>Contact Title</th>
            <th>Address</th>
            <th>City</th>
            @*<th>Region</th>
            <th>Postal Code</th>*@
            <th>Country</th>
            <th>Phone</th>
            @*<th>Fax</th>
            <th>Action</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        { 
            <tr>
                @*<td>@Html.DisplayFor(modelItem => item.CustomerID)</td>*@
                <td>@Html.DisplayFor(modelItem => item.CompanyName)</td>
                <td>@Html.DisplayFor(modelItem => item.ContactName)</td>
                <td>@Html.DisplayFor(modelItem => item.ContactTitle)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>@Html.DisplayFor(modelItem => item.City)</td>
                @*<td>@Html.DisplayFor(modelItem => item.Region)</td>
                <td>@Html.DisplayFor(modelItem => item.PostalCode)</td>*@
                <td>@Html.DisplayFor(modelItem => item.Country)</td>
                @*<td>@Html.DisplayFor(modelItem => item.Phone)</td>
                <td>@Html.DisplayFor(modelItem => item.Fax)</td>*@
                <td></td>

            </tr>
        }
    </tbody>
</table>

@section Script{
    @Scripts.Render("~/bundles/AutoComplete")
    <script type="text/javascript">
    $(function () {
        $("#searchText").autocomplete({
            source: '@Url.Action("AutoCustomerList")'
        });
    });
    </script>
}



